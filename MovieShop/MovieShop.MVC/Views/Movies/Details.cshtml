@model ApplicationCore.Models.Response.MovieCardResponseModel


<div class="bg-image" style="background-image: url(@Model.BackdropUrl)">
    <div class="row">
        @*poster*@
        <div class="col-md-3 offset-1">
            <div>
                <img src="@Model.PosterUrl" class="poster" alt="@Model.Title" />
            </div>
        </div>

        @*text details*@
        <div class="col-md-3">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-white">@Model.Title</h1>
                    <p class="text-muted"> @Model.Tagline </p>
                </div>

            </div>
            <div class="row">
                <div class="col-4 font-weight-bold text-secondary">
                    @Model.RunTime m | @Model.ReleaseDate.Value.Date.Year
                </div>
                <div class="col-8 font-weight-bold text-secondary">
                    @foreach (var genre in Model.Genres)
                    {
                        <a class="badge badge-pill badge-dark ml-1">
                            @genre.Name
                        </a>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-4 mt-3">
                    <h4>
                        <span class="badge badge-warning">
                            @Model.Rating
                        </span>
                    </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-white">
                    @Model.Overview
                </div>
            </div>
        </div>

        @*buttons*@
        <div class="col-md-2 mt-4 offset-1">
            <ul class="list-group">
                <li class="list-group-item">
                    <button type="button" class="btn btn-outline-light btn-lg btn-block btn-sm">
                        <i class="far fa-edit mr-1"></i>
                        REVIEW
                    </button>
                </li>
                <li class="list-group-item">
                    <button type="button" class="btn btn-outline-light btn-lg btn-block btn-sm">
                        <i class="fas fa-play mr-1"></i> TRAILER
                    </button>
                </li>
                <li class="list-group-item">
                    <a class="btn btn-light btn-lg btn-block btn-sm">
                        BUY @Model.Price
                    </a>
                </li>
                <li class="list-group-item">
                    <a class="btn btn-light btn-lg btn-block btn-sm">
                        WATCH MOVIE
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="row mt-4">
    @*MOVIE FACTS*@
    <div class="col-4" style="background-color: #f8f9fa">
        <h4>MOVIE FACTS</h4>
        <hr />
        <ul class="list-group">
            <li class="list-group-item">
                <i class="far fa-calendar-plus"></i>  Release Date 
                <span class="badge badge-dark">@Model.ReleaseDate.Value.ToShortDateString()</span>
            </li>
            <li class="list-group-item">
                <i class="fas fa-hourglass-start"></i>  Run Time 
                <span class="badge badge-dark">@Model.RunTime m</span>
            </li>
            <li class="list-group-item">
                <i class="fas fa-money-check-alt"></i>  Box Office 
                <span class="badge badge-dark">$ @Model.Revenue?.ToString("#,##0")</span>
            </li>
            <li class="list-group-item">
                <i class="fas fa-dollar-sign"></i>  Budget
                <span class="badge badge-dark">$ @Model.Budget?.ToString("#,##0")</span>
            </li>
            <li class="list-group-item">
                <i class="fab fa-imdb"></i>
                <a href="@Model.ImdbUrl"
                   class="text-dark ml-3"
                   target="_blank">
                    <i class="fas fa-share-square mr-2"></i>
                </a>
            </li>
        </ul>
    </div>

    @*CAST*@
    <div class="col-4">
        <h4>CAST</h4>
        <table class="table">
                <tbody>
                    @foreach (var cast in Model.Casts)
                    {
                        <tr>
                            <td>
                                <img src="@cast.ProfilePath" alt="@cast.Name" class="rounded-circle cast-img"/>
                            </td>
                            <td>@cast.Name</td>
                            <td>@cast.Character</td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
</div>

<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />